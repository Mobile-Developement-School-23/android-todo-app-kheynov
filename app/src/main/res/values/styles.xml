<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorSecondary">@color/separator</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:windowBackground">@color/colorBackgroundSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/colorTertiary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.NegativeButton
        </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.PositiveButton
        </item>
    </style>

    <style name="DatePickerTheme.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/cancel</item>
    </style>

    <style name="DatePickerTheme.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">@string/ok</item>
    </style>

</resources>