<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todosFragment">

    <fragment
        android:id="@+id/todosFragment"
        android:name="ru.kheynov.todoappyandex.presentation.todos.MainScreenFragment"
        android:label="Todos list">
        <action
            android:id="@+id/action_todosFragment_to_todoDetailFragment"
            app:destination="@id/editTodoFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right" />

    </fragment>

    <fragment
        android:id="@+id/editTodoFragment"
        android:name="ru.kheynov.todoappyandex.presentation.editor.TodoFragment"
        android:label="Todo editing" />
</navigation>